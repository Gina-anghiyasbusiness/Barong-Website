
style.

	*,
	*::before,
	*::after {
		
	  margin: 0;
	  padding: 0;
	  box-sizing: inherit;
		
	}

	html {
		
	  font-size: 62.5%;
	  box-sizing: border-box;
		font-family: 'Inter', sans-serif;
	}

	body{
		
		line-height: 1;		
		font-size:1.6rem;
	}

	header{
		
			background-color:#bbb;			
			margin-bottom:3rem;		
	}
	
	a:link,
	a:visited{
		
		display:inline-block;
		padding: .25rem .5rem;
		background-color: #bbb;
		font-size: 1.2rem;
		border-radius: 3px;
		color:#333;
		text-decoration:none;		
		margin-bottom:3rem;	
	}	
	
	.orderConfirm_header--img{
		
		display:flex;		
		align-items:center;
		justify-content:center;	
		
	}
				
		p.order-recieved{
			
			text-align:center;
			margin-bottom:2rem;
		}
		
		.email_body-link{
			
			display:flex;
			align-items:center;
			justify-content:center;
			
		}