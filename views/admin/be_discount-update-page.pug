extends be_base


include ../../mixins/_formFields
include ../../mixins/_formSelectOptions



block content 

	main.admin-orderList.wide-container 
	
		h2.admin__page--heading.mrgbtm--lg Update Discount
		
		
		section.create_discount-grid 
		
			form#update-discount.create_discount-form(data-discount-id=`${discount._id}`)
			
				.create_discount--block
				
					.create_discount--row
						+formRows('code','text', discount.code)
					.create_discount--row
						+formRows('percentage','number', discount.percentage )
					.create_discount--row
						+formRows('amount','number', discount.amount)
						
				//- .create_discount--block
				//- 	p Products and categories
				.create_discount--block
				
					.create_discount--row
						label(for=`startdate` ) STARTDATE
						input(id=`startdate`, name=`startdate`, type=`date`, value=`${startDate}`)

					.create_discount--row
						label(for=`enddate` ) ENDDATE
						input(id=`enddate`, name=`enddate`, type=`date`, value=`${endDate}`)

					.create_discount--radio-flex
						.create_discount--radio
							label(for="active") ACTIVE 
						.create_discount--inputs
							.create_discount-inputs--flex
								input#radioTrue(
									type="radio"
									name="active"
									value="true"
									checked=discount && discount.active === true
								)
								| True
							.create_discount-inputs--flex
								input#radioFalse(
									type="radio"
									name="active"
									value="false"
									checked=discount && discount.active === false
								)
								| False
					
				button(type='submit') Submit Discount